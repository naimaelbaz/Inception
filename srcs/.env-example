# ===========================================
# Database Configuration
# ===========================================
# Database name for WordPress
DB_NAME=Database_name_here

# Database host (container name from docker-compose.yml)
DB_HOST=database_host_here

# Database user 
DB_USER=database_user_here

# Database password
DB_PASSWORD=your_secure_password_here

# ===========================================
# WordPress Configuration
# ===========================================
# WordPress site title (displayed in browser)
WP_SITE_TITLE=My WordPress Site

# WordPress admin username
WP_ADMIN_USER=admin

# WordPress admin password
WP_ADMIN_PASS=your_secure_admin_password

# WordPress admin email
WP_ADMIN_EMAIL=admin@example.com

# ===========================================
# Server Configuration
# ===========================================
# Your server's public IP or domain name
# Format: https://YOUR_IP or https://yourdomain.com
HOST=https://0.0.0.0

# ===========================================
# Optional Configuration
# ===========================================
# API keys for additional services (if needed)
API_KEY=your_api_key_here